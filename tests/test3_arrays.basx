    FOR j = 0 TO 2
        PRINT matrix(i, j)
    NEXT
NEXT

REM Dizi sıralama simülasyonu
DIM sort_array(4)
LET sort_array(0) = 5
LET sort_array(1) = 2
LET sort_array(2) = 8
LET sort_array(3) = 1
LET sort_array(4) = 9

PRINT "Sıralama öncesi:"
FOR i = 0 TO 4
    PRINT sort_array(i)
NEXT

REM Bubble sort
DIM temp AS INTEGER
FOR i = 0 TO 3
    FOR j = 0 TO 3 - i
        IF sort_array(j) > sort_array(j + 1) THEN LET temp = sort_array(j)
        IF sort_array(j) > sort_array(j + 1) THEN LET sort_array(j) = sort_array(j + 1)
        IF sort_array(j) > sort_array(j + 1) THEN LET sort_array(j + 1) = temp
    NEXT
NEXT

PRINT "Sıralama sonrası:"
FOR i = 0 TO 4
    PRINT sort_array(i)
NEXT

