DIM names(5) 
DIM i AS INTEGER

REM Dizi elemanlarına değer atama
FOR i = 0 TO 10
    LET numbers(i) = i * 2
NEXT

LET names(0) = "Ali"
LET names(1) = "Veli"
LET names(2) = "Mehmet"
LET names(3) = "Ayşe"
LET names(4) = "Fatma"

REM Dizi elemanlarını yazdırma
PRINT "Numbers dizisi:"
FOR i = 0 TO 10
    PRINT "numbers(" + STR$(i) + ") =", numbers(i)
NEXT

PRINT "Names dizisi:"
FOR i = 0 TO 4
    PRINT "names(" + STR$(i) + ") =", names(i)
NEXT

REM Liste işlemleri
DIM my_list AS LIST
