DEF SUB initialize_board()
    board = []
    FOR i = 0 TO 2
        DIM row AS ARRAY
        row = []
        FOR j = 0 TO 2
            INSERT(row, " ")
        NEXT j
        INSERT(board, row)
    NEXT i
END SUB

