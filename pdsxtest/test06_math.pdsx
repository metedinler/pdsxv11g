REM Üçgenin alanı (Heron formülü)
DEF FUNCTION triangle_area(a, b, c)
    DIM s AS DOUBLE
    s = (a + b + c) / 2
    RETURN SQR(s * (s - a) * (s - b) * (s - c))
END FUNCTION

REM Dairenin alanı
DEF FUNCTION circle_area(radius)
    RETURN PI * radius * radius
END FUNCTION

REM Faktöriyel hesaplama
DEF FUNCTION math_factorial(n)
    IF n <= 1 THEN
        RETURN 1
    ELSE
        RETURN n * math_factorial(n - 1)
    END IF
END FUNCTION

PRINT "Kenarları 3, 4, 5 olan üçgenin alanı:", ROUND(triangle_area(3, 4, 5), 2)
PRINT "Yarıçapı 5 olan dairenin alanı:", ROUND(circle_area(5), 2)
PRINT "6! =", math_factorial(6)

PRINT

REM Hipotenüs hesaplama
DEF FUNCTION hypotenuse(a, b)
    RETURN SQR(a*a + b*b)
END FUNCTION

PRINT "Kenarları 3 ve 4 olan dik üçgenin hipotenüsü:", ROUND(hypotenuse(3, 4), 2)

