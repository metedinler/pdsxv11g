REM Normal dağılım simülasyonu
DEF FUNCTION random_normal_approx(mean, std_dev)
    REM Box-Muller dönüşümü yaklaşımı
    DIM u1 AS DOUBLE
    DIM u2 AS DOUBLE
    u1 = RND()
    u2 = RND()
    RETURN mean + std_dev * SQR(-2 * LOG(u1)) * COS(2 * PI * u2)
END FUNCTION

PRINT "5. Rastgele Normal Dağılım Örnekleri (μ=100, σ=15):"
FOR i = 1 TO 5
    PRINT "Örnek " + STR$(i) + ":", ROUND(random_normal_approx(100, 15), 1)
NEXT i

