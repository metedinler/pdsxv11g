REM Z-score hesaplama
DEF FUNCTION z_score(value, mean_val, std_val)
    RETURN (value - mean_val) / std_val
END FUNCTION

DIM sample_mean AS DOUBLE
DIM sample_std AS DOUBLE
DIM test_value AS DOUBLE

sample_mean = MEAN(large_data)
sample_std = STD(large_data)
test_value = 75

PRINT "7. Z-Score Hesaplaması:"
PRINT "Test değeri:", test_value
PRINT "Ortalama:", ROUND(sample_mean, 2)
PRINT "Standart sapma:", ROUND(sample_std, 2)
PRINT "Z-score:", ROUND(z_score(test_value, sample_mean, sample_std), 4)

PRINT
