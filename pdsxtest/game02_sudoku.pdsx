DEF SUB initialize_sudoku()
    REM 9x9 grid oluÅŸtur
    grid = []
    original_grid = []
    
    FOR i = 0 TO 8
        DIM row AS ARRAY
        DIM orig_row AS ARRAY
        row = []
        orig_row = []
        FOR j = 0 TO 8
            INSERT(row, 0)
            INSERT(orig_row, 0)
        NEXT j
        INSERT(grid, row)
        INSERT(original_grid, orig_row)
    NEXT i
    
    moves_count = 0
    hints_used = 0
    game_completed = False
    difficulty = "kolay"
    
    PRINT "Sudoku oyunu baÅŸlatÄ±ldÄ±!"
END SUB

DEF SUB generate_puzzle()
    PRINT "Sudoku bulmacasÄ± oluÅŸturuluyor..."
    
    REM Basit bir Ã¶rnek bulmaca (elle hazÄ±rlanmÄ±ÅŸ)
    DIM sample_puzzle AS ARRAY
    sample_puzzle = [
        [5, 3, 0, 0, 7, 0, 0, 0, 0],
        [6, 0, 0, 1, 9, 5, 0, 0, 0],
        [0, 9, 8, 0, 0, 0, 0, 6, 0],
        [8, 0, 0, 0, 6, 0, 0, 0, 3],
        [4, 0, 0, 8, 0, 3, 0, 0, 1],
        [7, 0, 0, 0, 2, 0, 0, 0, 6],
        [0, 6, 0, 0, 0, 0, 2, 8, 0],
        [0, 0, 0, 4, 1, 9, 0, 0, 5],
        [0, 0, 0, 0, 8, 0, 0, 7, 9]
    ]
    
    REM Grid'e kopyala
    FOR i = 0 TO 8
        FOR j = 0 TO 8
            grid(i)(j) = sample_puzzle(i)(j)
            original_grid(i)(j) = sample_puzzle(i)(j)
        NEXT j
    NEXT i
    
    SELECT CASE difficulty
        CASE "zor"
            call remove_numbers(40)
        CASE "orta"
            call remove_numbers(30)
        CASE ELSE  ' kolay
            call remove_numbers(20)
    END SELECT
    
    PRINT "âœ… " + difficulty + " seviye bulmaca hazÄ±rlandÄ±!"
END SUB

DEF SUB remove_numbers(count AS INTEGER)
    REM Belirli sayÄ±da sayÄ±yÄ± sÄ±fÄ±rla (zorlaÅŸtÄ±rmak iÃ§in)
    DIM removed AS INTEGER
    removed = 0
    
    WHILE removed < count
        DIM rand_row AS INTEGER
        DIM rand_col AS INTEGER
        rand_row = RND(0, 8)
        rand_col = RND(0, 8)
        
        IF grid(rand_row)(rand_col) <> 0 THEN
            grid(rand_row)(rand_col) = 0
            original_grid(rand_row)(rand_col) = 0
            removed = removed + 1
        END IF
    WEND
END SUB

