    WEND
END SUB

DEF FUNCTION is_valid_position(pos AS STRING) AS BOOLEAN
    IF LEN(pos) <> 2 THEN
        RETURN False
    END IF
    
    DIM row_char AS STRING
    DIM col_char AS STRING
    row_char = UPPER$(LEFT$(pos, 1))
    col_char = RIGHT$(pos, 1)
    
    REM SatÄ±r A-I arasÄ± olmalÄ±
    IF ASC(row_char) < ASC("A") OR ASC(row_char) > ASC("I") THEN
        RETURN False
    END IF
    
    REM SÃ¼tun 1-9 arasÄ± olmalÄ±
    DIM col AS INTEGER
    col = VAL(col_char)
    IF col < 1 OR col > 9 THEN
        RETURN False
    END IF
    
    RETURN True
END FUNCTION

DEF SUB make_move(position AS STRING, number AS INTEGER)
    DIM row AS INTEGER
    DIM col AS INTEGER
    
    row = ASC(UPPER$(LEFT$(position, 1))) - ASC("A")
    col = VAL(RIGHT$(position, 1)) - 1
    
    REM Orijinal sayÄ±larÄ± deÄŸiÅŸtiremesin
    IF original_grid(row)(col) <> 0 THEN
        PRINT "âŒ Bu hÃ¼cre sabit! DeÄŸiÅŸtirilemez."
        EXIT SUB
    END IF
    
    REM GeÃ§erli hamle kontrolÃ¼
    IF is_valid_number(row, col, number) THEN
        grid(row)(col) = number
        moves_count = moves_count + 1
        PRINT "âœ… " + position + " hÃ¼cresine " + STR$(number) + " yerleÅŸtirildi."
    ELSE
        PRINT "âŒ Bu sayÄ± bu konuma yerleÅŸtirilemez! Sudoku kurallarÄ±nÄ± kontrol edin."
    END IF
END SUB

DEF FUNCTION is_valid_number(row AS INTEGER, col AS INTEGER, num AS INTEGER) AS BOOLEAN
    REM SatÄ±r kontrolÃ¼
    FOR j = 0 TO 8
        IF j <> col AND grid(row)(j) = num THEN
            RETURN False
        END IF
    NEXT j
    
    REM SÃ¼tun kontrolÃ¼
    FOR i = 0 TO 8
        IF i <> row AND grid(i)(col) = num THEN
            RETURN False
        END IF
    NEXT i
    
    REM 3x3 kutu kontrolÃ¼
    DIM box_row AS INTEGER
    DIM box_col AS INTEGER
    box_row = (row / 3) * 3
    box_col = (col / 3) * 3
    
    FOR i = box_row TO box_row + 2
        FOR j = box_col TO box_col + 2
            IF (i <> row OR j <> col) AND grid(i)(j) = num THEN
                RETURN False
            END IF
        NEXT j
    NEXT i
    
    RETURN True
END FUNCTION

DEF SUB give_hint()
    IF hints_used >= 3 THEN
        PRINT "âŒ Maksimum ipucu sayÄ±sÄ±na ulaÅŸtÄ±nÄ±z! (3/3)"
        EXIT SUB
    END IF
    
    REM BoÅŸ bir hÃ¼cre bul ve doÄŸru sayÄ±yÄ± ver
    FOR i = 0 TO 8
        FOR j = 0 TO 8
            IF grid(i)(j) = 0 THEN
                REM Bu hÃ¼cre iÃ§in geÃ§erli sayÄ±larÄ± bul
                FOR num = 1 TO 9
                    IF is_valid_number(i, j, num) THEN
                        DIM pos_str AS STRING
                        pos_str = CHR$(65 + i) + STR$(j + 1)
                        PRINT "ğŸ’¡ Ä°pucu: " + pos_str + " konumuna " + STR$(num) + " yerleÅŸtirin."
                        hints_used = hints_used + 1
                        EXIT SUB
                    END IF
                NEXT num
            END IF
        NEXT j
    NEXT i
    
    PRINT "âŒ Ä°pucu bulunamadÄ±!"
END SUB

DEF SUB check_solution()
    DIM errors AS INTEGER
    errors = 0
    
    PRINT "Ã‡Ã¶zÃ¼m kontrol ediliyor..."
    
    FOR i = 0 TO 8
        FOR j = 0 TO 8
            IF grid(i)(j) <> 0 THEN
                REM GeÃ§ici olarak hÃ¼creyi boÅŸalt ve kontrol et
                DIM temp_val AS INTEGER
                temp_val = grid(i)(j)
                grid(i)(j) = 0
                
                IF NOT is_valid_number(i, j, temp_val) THEN
                    errors = errors + 1
                    DIM pos_str AS STRING
                    pos_str = CHR$(65 + i) + STR$(j + 1)
                    PRINT "âŒ Hata: " + pos_str + " konumundaki " + STR$(temp_val)
                END IF
                
                grid(i)(j) = temp_val
            END IF
        NEXT j
    NEXT i
    
    IF errors = 0 THEN
        PRINT "âœ… Åu ana kadar hata yok!"
    ELSE
        PRINT "âŒ Toplam " + STR$(errors) + " hata bulundu."
    END IF
END SUB

DEF FUNCTION is_puzzle_complete() AS BOOLEAN
    REM TÃ¼m hÃ¼creler dolu mu?
    FOR i = 0 TO 8
        FOR j = 0 TO 8
            IF grid(i)(j) = 0 THEN
                RETURN False
            END IF
        NEXT j
    NEXT i
    
    REM Ã‡Ã¶zÃ¼m geÃ§erli mi?
    FOR i = 0 TO 8
        FOR j = 0 TO 8
            DIM temp_val AS INTEGER
            temp_val = grid(i)(j)
            grid(i)(j) = 0
            
            IF NOT is_valid_number(i, j, temp_val) THEN
                grid(i)(j) = temp_val
                RETURN False
            END IF
            
            grid(i)(j) = temp_val
        NEXT j
    NEXT i
    
    RETURN True
END FUNCTION

